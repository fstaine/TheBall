<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.fstaine.theball">

    <application
        android:allowBackup="true"
        android:horizontalIcon="@mipmap/ic_launcher_horizontal"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:verticalIcon="@mipmap/ic_launcher_vertical">
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameSettingsActivity"
            android:label="@string/title_activity_game_settings"
            android:theme="@style/Theme.AppCompat"></activity>
    </application>

</manifest>